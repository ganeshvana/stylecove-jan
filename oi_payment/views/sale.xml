<odoo>
    <data>
        <record id="view_inherit_sale_creditlimit" model="ir.ui.view">
            <field name="name">view.inherit.sale.order.creditlimit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">            	       	
            	
            	<xpath expr= "//div[@name='button_box']" position ="inside">
	        		 <button type="object" name="action_view_project_ids" class="oe_stat_button" icon="fa-puzzle-piece" string="Projects" attrs="{'invisible': [('project_id', '!=', False)]}"/>
	            </xpath>
            	<!-- <xpath expr="//field[@name='payment_term_id']" position="after">
            		<field name="all_product_delivery" groups="sales_team.group_sale_manager"/>
            		<field name="price_basis"/>
            	</xpath> -->            	
                <xpath expr="//page[@name='other_information']" position="after">
                	<page string="Payment">
                		<field name="payment_detail_ids" editable="1">
                			<tree editable="bottom">
                				<!-- <field name="name"/> -->
                				<!-- <field name="supply"/>
                				<field name="desc"/>
                				<field name="percentage"/> -->
                				<field name="payment_term_id" invisible="1"/>
                				<field name="payment_ids" widget="many2many_tags" readonly="1"/>
                				<field name="actual_amount"/>
                				<field name="payment_amount" string="Payment Amount" readonly="1"/>
                				<field name="balance_amount"/>
                				<!-- <field name="description"/> -->
                				<!-- <field name="hsn_code"/>
                				<field name="qty"/>
                				<field name="product_uom"/>
                				<field name="amount"/>
                				<field name="tax_id" widget="many2many_tags"/>
                				<field name="total_price"/> -->
                				
                			</tree>
                		</field>
                		<group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group colspan="4">
                                    <field name="note" nolabel="1" placeholder="Terms and conditions..."/>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <!-- <field name="tax_totals_json1" widget="account-tax-totals-field" nolabel="1" colspan="2"/> -->
                                </group>
                                <div class="oe_clear"/>
                            </group>
                	</page>                    
                </xpath>
            </field>
        </record>
        
