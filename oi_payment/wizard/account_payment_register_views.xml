<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>    	
    	<record id="view_account_payment_register_form_inherit" model = "ir.ui.view" >
	        <field name="name">account.payment.register.inherit</field>
	        <field name="model">account.payment.register</field>
	        <field name="inherit_id" ref = "account.view_account_payment_register_form"/>
	        <field name="arch" type="xml" >
	        	<xpath expr= "//field[@name='journal_id']" position ="after">
	        		<field name="payment_type"/>
	                <field name="sale_order_id" domain="[('partner_id','=',partner_id),('state','=','sale')]" attrs="{'invisible': [('payment_type','=', 'outbound')]}"/>
	                <field name="payment_term_line_ids" widget="many2many_tags" attrs="{'invisible': [('payment_type','=', 'outbound')]}"/>
	                <field name="purchase_order_id" domain="[('partner_id','=',partner_id),('state','=','purchase')]" attrs="{'invisible': [('payment_type','=', 'inbound')]}"/>
	                <field name="po_payment_term_line_ids" widget="many2many_tags" attrs="{'invisible': [('payment_type','=', 'inbound')]}"/>
	            </xpath>
	        </field>
	    </record>   
	    
	    <record id="payment_export_form" model="ir.ui.view">
        <field name="name">payment.export.view.form</field>
        <field name="model">payment.export</field>
        <field name="arch" type="xml">
            <form>  
            	<group>
            		<group>
            			<field name="name_file" />
            		</group>
            		<group>
            			<field name="xls_file" readonly="1" filename="xls_filename"/>
            			<field name="xls_filename" readonly="1"/>
            		</group>
            	</group>            
                <footer>
                    <button name="generate_report" string="Export XLSX" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>               
            </form>
        </field>
    </record>
        
    <record id="action_payment_export" model="ir.actions.act_window">
        <field name="name">Export Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.export</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_payment" />
        <field name="binding_view_types">list</field>
    </record>
    </data>
</odoo>
